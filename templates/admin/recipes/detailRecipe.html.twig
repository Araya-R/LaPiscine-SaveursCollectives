{% extends "admin/base.html.twig" %}

{% block title %}
	{{recipe.title}}
{% endblock %}

{% block main %}
	<main>
		<div class="detailRecipe-wrapper">
			<h2>{{recipe.title}}</h2>
			{% if recipe.image %}
				<div class="recipeImg">
					<img src="{{asset ('uploads/recipes/' ~ recipe.image)}}" alt="{{recipe.title}}">
				</div>
			{% endif %}

			<p>
				<strong>Description :</strong>
				{{recipe.description}}</p>
			<p>
				<strong>Catégorie :</strong>
				{{recipe.category.title}}</p>
			<p>
				<strong>Pour :</strong>
				{{recipe.servings}}</p>
			<p>
				<strong>Temps de préparation :</strong>
				{{recipe.prepTime}}</p>
			<p>
				<strong>Temps de cuisson :</strong>
				{{recipe.cookingTime}}</p>

			<h3>Ingrédients :</h3>
			<ul>
				{% for ingredient in recipe.ingredients %}
					<li>{{ingredient.quantity}}
						{{ingredient.name}}</li>
				{% endfor %}
			</ul>

			<h3>Étapes :</h3>
			<ul>
				{% for step in recipe.steps %}
					<li>{{step}}</li>

				{% endfor %}
			</ul>

			<a href="{{ path('admin-display-recipes') }}">Retour à la liste des recettes</a>
		</div>
	</main>

{% endblock %}
